{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Détails de la liste</h1>
        
        {% if task_list is defined %}
            <h1 class="mb-4">Tâches de la liste : {{ task_list.title }}</h1>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <p class="card-text">{{ task_list.description }}</p>
                </div>
            </div>
        {% endif %}
        
        <div class="list-group mt-4">
            {% if tasks is not empty %}
                {% for task in tasks %}
                    <div class="list-group-item list-group-item-action {{ task.priority|lower }}">
                        <h5 class="mb-1">{{ task.title }}</h5>
                        <p class="mb-1">{{ task.description }}</p>
                        {% if task.priority != "" %}
                            <small>Priorité: {{ task.priority }}</small><br>
                        {% endif %}
                        {# {% if task.assignees is defined and task.assignees|length > 0 %}
                            <small>Responsable: {{ task.getAssigneesUsernames() }}</small>
                        {% endif %} #}
                    </div>
                {% endfor %}
            {% else %}
                <div class="list-group-item">
                    <p>Aucune tâche disponible.</p>
                </div>
            {% endif %}
        </div>

        <style>
            .list-group-item { background-color: #f0f0f0; }
            .rouge { background-color: #ffdddd; }
            .orange { background-color: #ffe5b4; }
            .jaune { background-color: #ddffdd; }
        </style>
    </div>
{% endblock %}

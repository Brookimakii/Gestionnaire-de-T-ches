{% extends 'base.html.twig' %}

{% block title %}Task index{% endblock %}

{% block body %}
    <h1>Task index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>CreationDate</th>
                <th>Priority</th>
                <th>Finished</th>
                <th>DueDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
            <tr>
                <td>{{ task.id }}</td>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.creationDate ? task.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ task.priority }}</td>
                <td>{{ task.finished ? 'Yes' : 'No' }}</td>
                <td>{{ task.dueDate ? task.dueDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('task_detail', {'id': task.id}) }}">show</a>
                    <a href="{{ path('task_modifier', {'id': task.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('task_creer') }}">Create new</a>
{% endblock %}
